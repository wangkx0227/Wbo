

.page-main{
  margin-top: 5px;
  padding: 5px;
}
.page-main .wrapper .cell {
  margin-bottom: 15rpx;
  background-color: #ffffff;
  padding: 5px 10px;
  display: grid;
  gap: 8px;
}

/* 最后一个元素不需要间距 */
.page-main .wrapper .cell:last-child {
  margin-bottom: 0;
}
.cell-swiper{
  position: relative; 
}

.title-font-main {
  font-size: 14px;
  font-weight: 600;
  color: #333;
}
.title-font-other {
  font-size: 12px;
  color: #606266  ;
}
.title-arrange-space-between {
  display: flex;
  justify-content: space-between; /* 一左一右 */
  align-items: center;
}
.button-center{
  display: flex;
  align-items: center;
}



.grid-overlay {
  position: absolute; /* 绝对定位叠加 */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  pointer-events: none;
}

.grid-cell {
  border: 0.5px solid rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
}

/* 弹窗的css */
.popup-block {
  width: 100vw;
  height: 240px;
  background: var(--td-bg-color-container);
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.popup-header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.popup-title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: #333;
}
.popup-comments {
  padding: 0 10px;
  height: 180px;
  color: #606266  ;
}
/* 评论 */
.dialog-textarea {
  margin-top: 15px;
}