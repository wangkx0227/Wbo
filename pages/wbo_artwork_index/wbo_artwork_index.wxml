<!-- 骨架 -->
<import src="wbo_artwork_index.skeleton.wxml" />
<template is="skeleton" wx:if="{{skeletonLoading}}" />

<view wx:else="{{skeletonLoading}}" class="page-wrapper">
  <view class="page-head filter-bar">
    <t-row>
      <t-col span="24">
        <view class="example-search">
          <t-search placeholder="搜索" shape="round" model:value="{{searchValue}}" bind:change="onSearchChange" />
        </view>
      </t-col>
      <t-col span="24">
        <t-dropdown-menu>
          <t-dropdown-item options="{{dropdownTemplate.options}}" placement="right" value="{{dropdownTemplate.value}}" bindchange="onChange" />
          <t-dropdown-item options="{{dropdownSorter.options}}" placement="right" default-value="{{dropdownSorter.value}}" />
        </t-dropdown-menu>
      </t-col>
    </t-row>
  </view>
  <view class="page-main">
    <view class="wrapper">
      <t-cell-group theme="card" class="t-cell-group" bindtap="onJumpArtworkDeatails" data-group-id="1">
        <t-cell hover arrow>
          <t-badge count="{{8}}" slot="note" shape="square" />
          <view slot="title">
            <view class="arrange-space-between">
              <view>
                <text class="title-main">Name of Client：</text>
                <text class="title-other">TG D51</text>
              </view>
              <t-tag class="margin-16" variant="light" icon="discount" size="small" 
              style="position: relative;left: 90rpx;" wx:if="{{tabBarShow}}"> 初步评审 </t-tag>
            </view>
            <view>
              <text class="title-main">Theme of Program：</text>
              <text class="title-other">The Outfitters</text>
            </view>
            <view class="arrange-space-between">
              <text class="title-other" style="margin-right: 15px;">Year：2015</text>
              <text class="title-other">创建时间：2025-07-21</text>
            </view>
          </view>
        </t-cell>
      </t-cell-group>

    </view>
  </view>
  <!-- 当下拉时,进行显示的内容  -->
  <view class="loading-box loading-flex" wx:if="{{isLoadingReachMore}}">
    <t-loading theme="dots" size="60rpx" />
  </view>
  <view class="loading-box" wx:if="{{noMoreData}}">
    <text class="loading-text">-- 已经到底了 --</text>
  </view>
  <!-- 回到顶部 -->
  <t-back-top theme="half-round" text="顶部" scroll-top="{{scrollTop}}" bind:to-top="onToTop" />
  <!-- 标签栏-只有Kyle才能看到 -->
  <view class="tab-bar-wrapper" wx:if="{{tabBarShow}}">
    <t-tab-bar t-class="t-tab-bar" value="{{tabBarValue}}" shape="round" theme="tag" split="false" bindchange="onTabBarChange">
      <t-tab-bar-item value="primary">
        初步评审
      </t-tab-bar-item>
      <t-tab-bar-item value="ultimate">
        最终审查
      </t-tab-bar-item>
    </t-tab-bar>
  </view>
</view>
<!-- 轻提示 -->
<t-toast id="t-toast" />