.mb-16 {
  margin-bottom: 32rpx;
}

.input-example {
  --td-input-vertical-padding: 24rpx;
  padding: 32rpx 32rpx 16rpx;
}

.input-example-label {
  color: #333;
  font-size: 32rpx;
  line-height: 32rpx;
  margin: 0 8rpx 16rpx;
}

.input-example-input {
  border: 2rpx solid #f5f5f5;
  border-radius: 12rpx;
}
.button-example {
  margin: 32rpx;
  display: flex;
}
/* 重写标签栏组件样式*/
.t-tab-bar {
  z-index: 1999 !important;
}
.t-tab-bar--round{
  margin-left: 90rpx !important;
  margin-right: 90rpx !important;
}
.t-tab-bar-item--text-only {
    font-size: 24rpx !important;
}
.t-tab-bar--fixed {
  margin-bottom: 34px !important;
}

.block {
  width: 100vw;
  height: 240px;
  background: var(--td-bg-color-container);
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: var(--td-text-color-primary);
}

.btn {
  font-size: 30rpx;
  padding: 30rpx;
}

.btn--cancel {
  color: var(--td-text-color-secondary);
}

.btn--confirm {
  color: #0052d9;
}

.checkbox-scroll-container {
  height: 400rpx; /* 设置固定高度 */
}