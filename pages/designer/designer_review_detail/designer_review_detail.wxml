<!-- 骨架屏 -->
<import src="skeleton.wxml" />
<template is="skeleton" wx:if="{{skeletonLoading}}" />
<!-- 主体 -->
<view class="page-wrapper" wx:else="{{skeletonLoading}}">
  <view class="page-head filter-bar">
    <t-row>
      <t-col span="24">
        <t-dropdown-menu>
          <t-dropdown-item options="{{dropdownArtwork.options}}" placement="right" value="{{dropdownArtwork.value}}" bindchange="onArtworkChange" />
          <t-dropdown-item options="{{dropdownAssess.options}}" placement="right" value="{{dropdownAssess.value}}" bindchange="onAssessChange" />
        </t-dropdown-menu>
      </t-col>
    </t-row>
  </view>
  <view class="page-main">
    <view class="wrapper">
      <view class="cell">
        <view class="title-font-main arrange-space-between">
          <text>Title：Animals in sleeping bags</text>
        </view>
        <view class="title-font-other arrange-space-between">
          <text>Name：黎善玲</text>
          <text>Code：LSL__AIE MJ_2025_01</text>
        </view>
        <!-- 轮播图，工厂稿与样品图并列 -->
        <view class="cell-swiper-row">
          <!-- 第一个轮播图/图片 -->
          <view class="cell-swiper">
            <text class="title-font-other">原始工厂 CAD 图稿</text>
            <t-swiper wx:if="{{swiperImages.length !== 0}}" current="{{current}}" autoplay="{{autoplay}}" duration="{{duration}}" interval="{{interval}}" navigation="{{ { type: 'dots' } }}" list="{{swiperImages}}" bind:click="onSwiperImagesTap">
              <swiper-item wx:for="{{swiperImages}}" wx:key="index">
                <image src="{{item.url}}" mode="aspectFill" style="width: 100%; height: 300rpx;" />
              </swiper-item>
            </t-swiper>
            <t-image wx:else src="" shape="round" error="slot" width="348rpx" height="348rpx">
              <text class="error-text" slot="error">轮播图加载失败</text>
            </t-image>
          </view>
          <!-- 第二个轮播图/图片 -->
          <view class="cell-swiper">
            <text class="title-font-other">FMR 上传的样品照片</text>
            <t-swiper wx:if="{{swiperImages.length !== 0}}" current="{{current}}" autoplay="{{autoplay}}" duration="{{duration}}" interval="{{interval}}" navigation="{{ { type: 'dots' } }}" list="{{swiperImages}}" bind:click="onSwiperImagesTap">
            </t-swiper>
            <t-image wx:else src="" shape="round" error="slot" width="348rpx" height="348rpx">
              <text class="error-text" slot="error">轮播图加载失败</text>
            </t-image>
          </view>
        </view>
        <view class="arrange-column">
          <text class="title-font-main">客户选稿（R1）：</text>
          <t-radio-group value="{{radioValue}}" bind:change="onRadioChange">
            <t-radio value="0" label="已选中 – Round 1" borderless />
            <t-radio value="1" label="已淘汰 – 客户未选中（R1）" borderless />
          </t-radio-group>
        </view>
        <!-- 设计稿与工厂打样稿 -->
        <t-collapse value="{{collapseValue}}" bind:change="onCollapseChange">
          <t-collapse-panel value="{{0}}">
            <view slot="header">
              <text class="title-font-main">工厂打样稿：{{UpdatefactoryArtworkStatus}}</text>
            </view>
            <view slot="header-right-content">
              <t-link size="small" content="上传" hover underline catchtap="onOpenUploadFactoryArtwork" prefixIcon="upload" />
            </view>
            <view class="cell-swiper">
              <t-swiper wx:if="{{swiperImages2.length !== 0 }}" current="{{current}}" autoplay="{{autoplay}}" duration="{{duration}}" interval="{{interval}}" navigation="{{ { type: 'dots' } }}" list="{{swiperImages2}}" bind:click="onSwiperImagesTap">
              </t-swiper>
              <!-- 无数据时显示占位内容 -->
              <t-image wx:else src="" shape="round" error="slot" width="640rpx" height="384rpx">
                <text class="error-text" slot="error">轮播图加载失败</text>
              </t-image>
            </view>
          </t-collapse-panel>
        </t-collapse>
      </view>
    </view>
  </view>
  <!-- 当下拉时,进行显示的内容  -->
  <view class="loading-box loading-flex" wx:if="{{isLoadingReachMore}}">
    <!-- <text class="loading-text">加载中...</text> -->
    <t-loading theme="dots" size="60rpx" />
  </view>
  <view class="loading-box" wx:if="{{noMoreData}}">
    <text class="loading-text">-- 已经到底了 --</text>
  </view>
</view>
<!-- 轻提示 -->
<t-toast id="t-toast" />
<!-- 回到顶部 -->
<t-back-top theme="half-round" text="顶部" scroll-top="{{scrollTop}}" bind:to-top="onToTop" />
<!-- 查看自评弹窗 -->
<t-popup visible="{{popupVisible}}" bind:visible-change="onClosePopup" placement="bottom">
  <view class="popup-block">
    <view class="popup-header">
      <view class="popup-title">反馈建议</view>
    </view>
    <view class="popup-comments">
      <text>{{ popupValue }}</text>
    </view>
  </view>
</t-popup>
<!-- 抽屉 -->
<t-popup visible="{{popupAddVisible}}" placement="left">
  <view class="popup-block" style="padding: 10rpx;height: 100%;">
    <view class="popup-header">
      <view class="popup-title">工厂打样稿：</view>
    </view>
    <view class="popup-comments">
      <view class="input-example">
        <t-upload mediaType="{{['image']}}" max="{{5}}" files="{{imageFileList}}" bind:add="onImageAdd" bind:remove="onImageRemove">
        </t-upload>
      </view>
      <view class="button-example">
        <t-button theme="light" block t-class="group-btn" bindtap="onCloseUploadFactoryArtwork">关闭</t-button>
        <t-divider layout="vertical" style="height:64rpx" />
        <t-button theme="primary" block t-class="group-btn" bindtap="onSubmitFactoryArtwork">提交</t-button>
      </view>
    </view>
  </view>
</t-popup>