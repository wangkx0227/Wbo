.login-container {
	padding: 48rpx 32rpx;
	font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  }
  
  .switch-tabs {
	display: flex;
	justify-content: space-around;
	margin-bottom: 48rpx;
  }
  
  .tab {
	font-size: 32rpx;
	color: #888;
	padding: 16rpx 0;
	border-bottom: 4rpx solid transparent;
	transition: all 0.3s ease;
  }
  
  .tab.active {
	color: #000;
	font-weight: 600;
	border-bottom-color: #07C160; /* 微信绿色 */
  }
  
  .login-method {
	display: flex;
	flex-direction: column;
	gap: 32rpx;
	animation: fadeIn 0.3s ease-in;
  }
  
  /* 输入框样式 */
  input {
	border: 1rpx solid #ccc;
	border-radius: 12rpx;
	padding: 24rpx;
	font-size: 28rpx;
	background-color: #fff;
  }
  
  input::placeholder {
	color: #bbb;
  }
  
  /* 按钮样式优化 */
  button {
	font-size: 30rpx;
	border-radius: 12rpx;
	height: 88rpx;
	display: flex;
	align-items: center;
	justify-content: center;
  }
  
  button[type="primary"] {
	background-color: #07C160;
	color: white;
	border: none;
  }
  
  @keyframes fadeIn {
	from {
	  opacity: 0;
	  transform: translateY(20rpx);
	}
	to {
	  opacity: 1;
	  transform: translateY(0);
	}
  }
  